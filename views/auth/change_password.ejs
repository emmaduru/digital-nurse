
<%- include("../includes/sidebar_top") %> 
    <h2 class="text-center pt-3">Change Password</h2>

    <form id="change-password-form" class="mx-auto col-lg-6 col-md-8" method="post">
        <div class="form-err"></div>
        <div class="form-group mb-3">
            <label for="old_password">Old Password</label>
            <input type="password" name="old_passord" required id="old_password" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="password">New Password</label>
            <input type="password" name="password" required id="password" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" name="confirm_password" required id="confirm_password" class="form-control">
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Change Password</button>
        </div>
    </form>

    <script src="/js/auth/change_password.js"></script>

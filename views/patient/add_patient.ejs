<%- include("../includes/sidebar_top") %>
    <h2 class="text-center">Add Patient</h2>

    <form id="add-patient-form" class="mx-auto col-lg-6 col-md-8" method="post">
        <div class="form-err"></div>
        <div class="form-group mb-3">
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" id="first_name" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" id="last_name" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="email">Email Address</label>
            <input type="email" name="email" id="email" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="date_of_birth">Date Of Birth</label>
            <input type="date" name="date_of_birth" id="date_of_birth" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="phone_number">Phone Number</label>
            <input type="tel" name="phone" id="phone" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="diagnosis">Diagnosis</label>
            <textarea name="diagnosis" id="diagnosis" cols="30" rows="3" class="form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="past_medical_history">Past Medical History</label>
            <textarea name="past_medical_history" id="past_medical_history" cols="30" rows="3" class="form-control"></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="ward">Ward</label>
            <select name="ward" id="ward" class="form-control">
                <option value="Medical Ward">Medical Ward</option>
                <option value="Surgical Ward">Surgical Ward</option>
                <option value="Accident and Emergency">Accident and Emergency</option>
                <option value="Theatre">Theatre</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="address">Address</label>
            <textarea name="address" id="address" class="form-control" cols="30" rows="3"></textarea>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Add Patient</button>
        </div>
    </form>

    <script src="/js/patient/add_patient.js"></script>
<%- include("../includes/sidebar_bottom") %> 